            <div class="btn <%= product.status === 'inStock' ? 'btn-success' : 'btn-dark' %> out-stock-btn">
              <%= product.status === 'inStock' ? 'Còn hàng' : 'Hết hàng' %>
            </div>

            <div class="icons">
              <i class="fas fa-heart"></i>
              <i class="fas fa-eye"></i>
            </div>

            <div class="card-body">
              <h5 class="card-title fw-bold text-multiline-truncate"><%= product.title %></h5>

              <div class="row">
                <div class="col-md-6">
                  <h6 class="fw-bold" style="margin-bottom: 0; color: red;">
                    <% if (product.discount > 0) { %>
                    <%= ((product.price * (100 - product.discount)) / 100).toLocaleString('vi-VN') %> ₫
                    <% } else { %>
                    <%= product.price.toLocaleString('vi-VN') %> ₫
                    <% } %>
                  </h6>

                  <% if (product.discount > 0) { %>
                  <span style="text-decoration: line-through; color: gray; font-size: 14px;">
                    <%= product.price.toLocaleString('vi-VN') %> ₫
                  </span>
                  <% } %>

                  <% 
                    const fullStars = Math.floor(product.totalRating); // số sao đầy
                    const halfStar = product.totalRating % 1 >= 0.5;   // có nửa sao không
                    const emptyStars = 5 - fullStars - (halfStar ? 1 : 0); 
                  %>

                  <div class="product-rating">
                    <% for(let i = 0; i < fullStars; i++) { %>
                    <i class="bi bi-star-fill text-warning" style="font-size: 12px;"></i>
                    <% } %>

                    <% if (halfStar) { %>
                    <i class="bi bi-star-half text-warning" style="font-size: 12px;"></i>
                    <% } %>

                    <% for(let i = 0; i < emptyStars; i++) { %>
                    <i class="bi bi-star text-warning" style="font-size: 12px;"></i>
                    <% } %>
                  </div>
                </div>

                <div class="col-md-6 d-flex align-items-center buy-btn">
                  <a class="d-block w-100" href="product/<%= product.id %>/<%= product.slug %>">
                    <button class="fas fa-shopping-bag openCartBtn"></button>
                  </a>
                </div>
              </div>

              <div class="buy-mobile">
                <a class="d-block w-100" href="product/<%= product.id %>/<%= product.slug %>">
                  <button class="btn btn-primary w-100">Mua</button>
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
        <% } else { %>
        <img style="width: 80%; margin: 0 auto;" src="/images2/snapedit_1729332572486.png" />
