<!-- Optional CDNs -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

<!-- Nền rượu rosé -->
<style>
  body {
    background-color: #f5e6e8; /* rosé wine inspired */
    font-family: 'Roboto', sans-serif;
  }
</style>

<!-- Form Forgot Password -->
<div class="container d-flex justify-content-center align-items-center min-vh-100" style="margin-top: -6rem;">
  <div class="card shadow p-4" style="max-width: 460px; width: 100%; background-color: rgba(255, 255, 255, 0.9);">
    <h3 class="text-center mb-3">
      <i class="fas fa-unlock-alt text-warning me-2"></i>Forgot Password
    </h3>

    <% if (notification && notification.message) { %>
      <div class="alert alert-<%= notification.type %> alert-dismissible fade show" role="alert">
        <i class="fas fa-<%= notification.type === 'success' ? 'check' : notification.type === 'danger' ? 'times' : notification.type === 'warning' ? 'exclamation-triangle' : 'info-circle' %> me-2"></i>
        <%= notification.messageForForgot ? notification.messageForForgot : notification.message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <form action="/auth/forgot-password" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required />
      </div>

      <div class="d-grid mb-2">
        <button type="submit" class="btn btn-warning">
          <i class="fas fa-paper-plane me-2"></i>Send Reset Email
        </button>
      </div>

      <div class="text-center">
        <a href="/auth/login" class="text-decoration-none small">← Back to login</a>
      </div>
    </form>
  </div>
</div>
