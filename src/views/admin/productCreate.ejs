<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">
                                <a href="/admin/dashboard">Barrel&Vine</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/admin/products">Products</a>
                            </li>
                            <li class="breadcrumb-item active">Product Detail</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Product Detail</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Form content -->
                        <form action="/admin/product-create" method="POST" id="productForm">
                            <div class="row">
                                <!-- Left column -->
                                <div class="col-xl-6">
                                    <div class="mb-3">
                                        <label class="form-label">Title</label>
                                        <input
                                            type="text"
                                            name="title"
                                            class="form-control"
                                            required
                                        />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Description</label>
                                        <textarea
                                            name="description"
                                            rows="5"
                                            class="form-control"
                                            required
                                        ></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Brand</label>
                                        <input
                                            type="text"
                                            name="brand"
                                            class="form-control"
                                            required
                                        />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Price</label>
                                        <input
                                            type="number"
                                            name="price"
                                            class="form-control"
                                            required
                                        />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Quantity</label>
                                        <input
                                            type="number"
                                            name="quantity"
                                            class="form-control"
                                            required
                                        />
                                    </div>

                                    <div class="mb-3" style="display: none;">
                                        <label class="form-label">Status</label>
                                        <select name="status" class="form-control">
                                            <option value="inStock" selected>In Stock</option>
                                            <option value="outOfStock">Out of Stock</option>
                                            <option value="discontinued">Discontinued</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Category</label>
                                        <select name="category" class="form-control">
                                            <% categories.forEach(function(cat) { %>
                                            <option value="<%= cat._id %>"><%= cat.title %></option>
                                            <% }) %>
                                        </select>
                                    </div>

                                    <!-- Hidden input to hold uploaded image filenames -->
                                    <input type="hidden" name="images" id="imagesInput" />
                                </div>

                                <!-- Right column: Custom Upload + Preview -->
                                <div class="col-xl-6">
                                    <div class="mb-3 mt-3 mt-xl-0">
                                        <label class="form-label">Upload Images</label>
                                        <input
                                            type="file"
                                            id="imageInput"
                                            accept="image/*"
                                            multiple
                                            class="form-control"
                                        />

                                        <!-- Preview container -->
                                        <div id="imagePreview" class="row mt-3"></div>
                                    </div>
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row -->

                            <button type="submit" class="btn btn-primary mt-3">
                                Create Product
                            </button>
                        </form>
                    </div>
                    <!-- end card-body -->
                </div>
                <!-- end card-->
            </div>
            <!-- end col-->
        </div>
        <!-- end row-->
    </div>
    <!-- container -->
</div>
<!-- content -->

