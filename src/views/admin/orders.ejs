<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("inputPassword2");
        const statusSelect = document.getElementById("status-select");
        const tableRows = document.querySelectorAll("table tbody tr");
        const deliveryStatusSelect = document.getElementById("delivery-status-select");

        function normalizeText(text) {
            return text.toLowerCase().trim();
        }

        function filterTable() {
            const searchValue = normalizeText(searchInput.value);
            const paymentStatusSelect = document.getElementById("status-select");
            const deliveryStatusSelect = document.getElementById("delivery-status-select");

            const selectedPayment = paymentStatusSelect.value.toLowerCase();
            const selectedDelivery = deliveryStatusSelect.value.toLowerCase();

            tableRows.forEach((row) => {
                const rowText = normalizeText(row.innerText);
                const paymentStatus = row.getAttribute("data-payment-status")?.toLowerCase() || "";
                const deliveryStatus = row.getAttribute("data-delivery-status")?.toLowerCase() || "";

                const matchesSearch = rowText.includes(searchValue);
                const matchesPayment =
                    selectedPayment === "choose..." || selectedPayment === "" || paymentStatus === selectedPayment;
                const matchesDelivery =
                    selectedDelivery === "choose..." || selectedDelivery === "" || deliveryStatus === selectedDelivery;

                if (matchesSearch && matchesPayment && matchesDelivery) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        searchInput.addEventListener("input", filterTable);
        statusSelect.addEventListener("change", filterTable);
        deliveryStatusSelect.addEventListener("change", filterTable);
    });
</script>

