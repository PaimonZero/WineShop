            const selectedDelivery = document.getElementById("delivery-status-select").value.toLowerCase();

            // Tr√≠ch xu·∫•t paymentStatus v√† deliveryStatus t·ª´ c·ªôt
            const paymentStatusText = data[3]?.toLowerCase() || '';
